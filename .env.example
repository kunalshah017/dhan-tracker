# Dhan Tracker Configuration
# Copy this file to .env and fill in your credentials

# PostgreSQL Database Connection (required for token persistence)
# The access token is stored in the database and refreshed automatically
PG_DB_CONNECTION_STRING=postgresql://user:password@host:5432/database

# Stop loss percentage (default: 5%)
DHAN_STOP_LOSS_PERCENT=5.0

# App password for UI and API access
APP_PASSWORD=your_secure_password_here

# NOTE: DHAN_ACCESS_TOKEN and DHAN_CLIENT_ID are stored in the database
# Use the /api/token/status endpoint to check token status
# For initial setup, add your token to the database using:
#   python -c "from dhan_tracker.database import save_dhan_token; ..."
